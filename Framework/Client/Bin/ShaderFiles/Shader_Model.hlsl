{
	PS_OUT_SHADOW_DEPTH		Out = (PS_OUT_SHADOW_DEPTH)0;


	vector vColor = g_DiffuseTexture.Sample(LinearSampler, In.vTexUV);;
	if (vColor.a <= 0.3f)
		discard;


	Out.vDepth = vector(In.vProjPos.w / 1000.0f, In.vProjPos.w * In.vProjPos.w, 0.f, 1.f);

	return Out;
}

